---
// src/components/TermCard.astro
const { term } = Astro.props;
---
<div class="bg-[#181f36] border border-[#353c5c] rounded-2xl p-6 shadow-md hover:shadow-xl transition w-full max-w-5xl mb-6">
  <div class="flex items-center mb-2">
    <span class={`font-bold rounded-full px-4 py-1 mr-3 text-base text-white ${term.color}`}>{term.acronym}</span>
    <span class="text-xl font-semibold text-[#7c8cf8]">{term.fullName}</span>
  </div>
  <div>
    <span class="text-base text-[#c3c8e8]">{term.description}</span>
    <br />
  <span class="text-base text-[#f7d560] font-vazir" dir="rtl" style="display:block;text-align:right">{term.descriptionFa}</span>
  </div>
</div>